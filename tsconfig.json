{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "actions/*": ["./app/actions/*"],
      "app/*": ["./app/*"],
      "components/*": ["./app/components/*"],
      "db/*": ["./db/*"],
      "lib/*": ["./lib/*"],
      "prompts/*": ["./prompts/*"],
      "supabase/*": ["./supabase/*"],
      "types/*": ["./types/*"],
      "utils/*": ["./utils/*"]
    },
    "types": ["react", "node", "next", "recharts"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "lib/**/*.ts",
    "components/**/*",
    "utils/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
